<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_pedidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uniandes.guiamoviles.activities.WelcomeActivity"
    tools:showIn="@layout/activity_welcome"
    android:orientation="vertical"
    >


    <EditText
        android:hint="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:id="@+id/editText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:id="@+id/editText2" />

    <Button
        android:text="Seleccionar gustos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seleccionar_gustos" />

    <Button
        android:text="Seleccionar paises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seleccionar_paises" />

    <fragment
        android:name="uniandes.guiamoviles.fragment.EdadFragment"
        android:id="@+id/fragment_propina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_edad" />

    <Button
        android:text="Registrar cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registrar"
        />


</LinearLayout>